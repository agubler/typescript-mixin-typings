{
	"version": "2.1.5",
	"compilerOptions": {
		"declaration": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"module": "umd",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"noImplicitThis": true,
		"removeComments": false,
		"sourceMap": true,
		"strictNullChecks": true,
		"target": "es5",
		"outDir": "dist",
		"baseUrl": "node_modules",
		"paths": {
			"core-library/*": [ "../../core-library/dist/*" ]
		}
	},
	"include": [
		"./src/**/*.ts"
	]
}
